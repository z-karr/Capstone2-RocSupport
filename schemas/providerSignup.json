{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "providerSignup.json",
    "title": "ProviderSignup",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "email": {
            "type": "string",
            "format": "email",
            "maxLength": 100
        },
        "password": {
            "type": "string",
            "minLength": 6,
            "maxLength": 100
        },
        "provider_type": {
            "type": "string",
            "enum": [
                "Individual Provider",
                "Healthcare System/Org",
                "Holistic Provider/Org"
            ]
        },
        "bio": {
            "type": "string"
        },
        "contact_information": {
            "type": "string",
            "maxLength": 255
        },
        "address": {
            "$ref": "./address.json"
        },
        "phone": {
            "$ref": "./phone.json"
        },
        "supported_health_issues": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "name",
        "email",
        "password",
        "provider_type"
    ]
}